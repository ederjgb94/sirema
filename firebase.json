{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    }
  },
  "emulators": {
    "auth": {
      "port": 9199
    },
    "firestore": {
      "port": 8181
    },
    "hosting": {
      "port": 5100
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}